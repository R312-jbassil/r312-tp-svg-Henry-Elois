---
// @ts-nocheck
import Layout from "../layouts/Layout.astro";
import { ui } from "./i18n/ui.js";

const locale = (Astro.locals.lang as "en" | "fr") ?? "en";
console.log("Locale in index:", locale);
---

<Layout title={ui[locale].index.title}>
  <main
    class="min-h-screen flex flex-col items-center justify-center text-center bg-base-200 px-4 sm:px-6 md:px-10 lg:px-20"
  >
    <section
      class="glass bg-primary/30 p-6 sm:p-8 md:p-10 rounded-2xl shadow-xl backdrop-blur-md border border-primary/50 max-w-lg sm:max-w-xl md:max-w-2xl w-full"
    >
      <h1
        class="text-3xl sm:text-4xl md:text-5xl font-extrabold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-secondary to-accent drop-shadow-lg"
      >
        {ui[locale].index.title}
      </h1>

      <p
        class="text-base sm:text-lg md:text-xl mb-8 text-primary-content/90 leading-relaxed"
      >
        {ui[locale].index.description}
      </p>

      <a
        href="generator"
        class="btn btn-secondary btn-md sm:btn-lg hover:scale-105 transition-transform duration-300"
      >
        {ui[locale].index.button}
      </a>
    </section>

    <footer class="mt-10 text-xs sm:text-sm text-base-content/70">
      © {new Date().getFullYear()} — Project by MMI Team
    </footer>
  </main>
</Layout>
